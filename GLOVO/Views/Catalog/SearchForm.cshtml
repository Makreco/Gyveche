@model GLOVO.Models.FoodModel

@{
    ViewBag.Title = "SearchForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>SearchForm</h2>

@using (Html.BeginForm("SearchForName", "Catalog"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                <label for="searchPhrase">Търсене по име</label>
                <input type="text" name="searchPhrase" id="searchPhrase" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Търси" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@using (Html.BeginForm("SearchForDescription", "Catalog"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                <label for="searchPhrase">Търсене по описание</label>
                <input type="text" name="searchPhrase" id="searchPhrase" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Търси" class="btn btn-default" />
            </div>
        </div>
    </div>
}
